<span id="minutes" class="timer">25</span><span class="timer">:</span><span id="seconds" class="timer">00</span>

<!-- this should prolly preload the users last used time period.. -->
<%= form_for @work_session, :remote => true do |f| %>

<br>

  <%= f.hidden_field :length, :value => "1500" %>

  <%= f.select :goal_id, current_user.goals.collect { |g| [g.name, g.id]},{ prompt: "Goal" }, { :class => 'form-control'} %>
<br>

  <%= f.text_field :description, placeholder: "What are you working on?", class: 'form-control' %>



<br />

<button id="start" class="btn btn-success">Start</button>


<% end %>

<div id="timer_controls" style="display: none">
	<button id="pause" class="btn btn-inverse">Pause</button>
	<div id="deleteform">
	</div>
</div>


<div id="status">
</div>