<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <%= link_to "request friend", user_friendships_path(user), :method => :post %> 
    </li>
  <% end %>
</ul>

<h1> Friend Requests </h1>
<% @requests.each do |friendship| %>
    <li>
      <%= link_to friendship.user.name, friendship.user %>
      <%= link_to "confirm friend",  {controller: "friendships", action: "confirm", id: friendship.id}, :method => :post %> 
    </li>
  <% end %>